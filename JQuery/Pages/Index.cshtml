@page
@model IndexModel
@{
    ViewData["Title"] = "Birtday Party ! ";
}

<div class="text-center">
    <h1 class="display-4">Welcome Birtday Invite Form</h1>
</div>

<div class="container">
    <img id="ajax-loader"
         src="/img/loader-gif.gif" style="display: none; width: 100px;" />
    <hr />
    <div id="results" class="alert alert-success" style="display: none;">
        Bilgileriniz kayıt edildi. <b>Yönlendiriliyorsunuz...</b>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-success">
                <div class="panel-heading"><h4>Sende davetlisin!</h4></div>
                <div class="panel-body">
                    <form id="InviteForm">
                        <div class="form-group">
                            <div class="form-group">
                                <label>Name:</label>
                                <input type="text" id="Name" name="Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Mail:</label>
                                <input type="text" id="Mail" name="Mail" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Katılacak mısın ? :</label>
                                <select id="State" name="State" class="form-control">
                                    <option>Partiye Katılacak mısın ?</option>
                                    <option value="true">Evet, geliyorum</option>
                                    <option value="false">Hayır, maalesef gelemiyorum</option>
                                </select>
                            </div>
                            <div class="text-center">
                                <input class="btn btn-success" type="submit" value="Gönder" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
