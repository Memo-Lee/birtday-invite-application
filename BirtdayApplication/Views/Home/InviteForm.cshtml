@model BirtdayApplication.Models.InviteModel;
@{
    ViewData["Title"] = "InviteForm";
}

<div class="panel panel-success">
    <div class="panel-heading"><h4>Sende davetlisin!</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <div class="form-group">
                    <label>Name:</label>
                    @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    <label>Mail:</label>
                    @Html.TextBoxFor(x => x.Mail, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    <label>Katılacak mısın ? :</label>
                    @Html.DropDownListFor(x => x.State, new [] {
                new SelectListItem() {Text = "Evet, Geliyorum.",
                Value = bool.TrueString},
                new SelectListItem() {Text = "Hayır, Maalesef Gelmeyeceğim",
                Value = bool.FalseString}
                },"Geliyor musun?", new {@class = "form-control"})
                </div>
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Gönder" />
                </div>
            </div>
        }
    </div>
</div>